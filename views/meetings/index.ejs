<%- include("../partials/header") %>

<% reformatDate = function(date) {
  var months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
  date = new Date(date);
  return(months[date.getMonth()] + ' ' + date.getDate() + ', ' + date.getFullYear());
} %>

<% if(currentUser && currentUser.accessLevel >= 1) { %>
  <a href="/meetings/new">Create Meeting</a>
<% } %>
<table class="table">
  <thead>
    <tr>
      <th>Meeting</th>
      <th>Date</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% i=1; meetings.forEach(function(meeting) { %>
      <tr>
        <td><%- i %></td>
        <td><%- reformatDate(meeting.date) %></td>
        <td><%- meeting.description %><a href="/meetings/<%- meeting._id %>">Details</a></td>
      </tr>
    <% i++; }); %>
  </tbody>
</table>

<%- include("../partials/footer") %>
