<%- include("../partials/header") %>

<a <% if(!query.from) { %> href="/members" <% } else { %> href="<%- query.from %>" <% } %>>Back</a>
<p><%- member.name %></p>
<p>Student ID: <%- member.id %></p>
<p>Grade: <%- member.grade %></p>
<p>Terms in CSF: <%- member.termCount %></p>
<p>Attendance: <% member.meetingsAttended.forEach(function(meeting) { %><%- reformatDate(meeting) %> | <% }); %></p>
<% if(currentUser.accessLevel >= 3) { %>
  <p>Position: <% if (member.accessLevel == 0) { %> Member <% } else if (member.accessLevel == 1) { %> Officer <% } else if (member.accessLevel == 2) { %> Tutoring Coordinator <% } else if (member.accessLevel == 3) { %> Developer <% } %></p>
  <a href="/members/<%- member._id %>/edit<% if (query.from) { %>?from=<%- query.from %><% } %>">Edit</a>
  <form action="/members/<%- member._id %>?_method=delete<% if(query.from) { %>&from=<%- query.from %><% } %>" method="post" onsubmit="return confirm('Are you sure you want to remove this member?')">
    <input type="submit" value="Remove"/>
  </form>
<% } %>

<%- include("../partials/footer") %>
