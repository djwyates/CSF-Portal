<%- include("../partials/header") %>

<p><b>Student ID</b> <%- member._id %></p>
<form class="" action="/members/<%- member._id %>?_method=put" method="post">
  <label for="name">Name</label>
  <input type="text" name="member[name]" value="<%- member.name %>" required/>
  <label for="grade">Grade</label>
  <input type="number" name="member[grade]" value="<%- member.grade %>" min="9" max="12" required/>
  <label for="termCount">Terms in CSF</label>
  <input type="number" name="member[termCount]" value="<%- member.termCount %>" min="0" max="7" required/>
  <label for="accessLevel">Access Level</label>
  <input type="number" name="member[accessLevel]" value="<%- member.accessLevel %>" min="0" max="3" required/>
  <input type="submit" value="Save"/>
</form>
<form class="" action="/members/<%- member._id %>?_method=delete" method="post" onsubmit="return confirm('Are you sure you want to remove this member?')">
  <input type="submit" value="Remove"/>
</form>

<%- include("../partials/footer") %>
